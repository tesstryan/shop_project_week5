<table class="cart_table">
	<tr>
		<th>Product</th>
		<th>Quantity <br> <%= link_to "Update", edit_line_item_path(line_item) %></th>
		<th>Product Name</th>
		<th>Individual Cost</th>
		<th>Total Line Cost</th>
		<th>Changed Your Mind?</th>

	</tr>

    <tr>
      <td class="image"><%= image_tag line_item.product.image %></td>
      <td><%= line_item.quantity %> <br> </td>
      <td><%= line_item.product.title %></td>
      <td><%= number_to_currency(line_item.product.price) %></td>
      <td><%= number_to_currency(line_item.total_price) %></td>
      <td><%= link_to 'Remove Item', line_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
</table>



